<% content_for :title, 'Lojas' %>

<% content_for :actions do %>
  <%= link_to 'Nova Loja', new_shop_path, class: 'btn btn-success' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th> Host</th>
      <th>Token da API</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @shops.empty? %>
      <tr><td colspan="3" class="text-center text-muted">Nenhuma loja cadastrada</td></tr>
    <% end %>
    <%= content_tag_for :tr, @shops.each do |shop| %>
      <td><%= link_to shop.name, edit_shop_path(shop) %></td>
      <td><%= shop.host %></td>
      <td><%= shop.token %></td>
      <td class="text-right">
        <%= link_to content_tag(:span, nil, class: 'glyphicon glyphicon-pencil'), edit_shop_path(shop) %>
        <%= link_to 'x', shop, method: :delete, data: { confirm: "Tem certeza que deseja apagar a loja #{shop.name}?" } %>
      </td>
    <% end %>
  </tbody>
</table>
